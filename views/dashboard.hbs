<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>GYM Management System - Dashboard</title>
  <!-- Bootstrap CSS -->
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' />

  <!-- Custom CSS -->
  <style>
    /* Custom styles */
    body {
      background-color: #f8f9fa;
      font-family:
        'Roboto', sans-serif;
    }

    .navbar-brand {
      font-size: 1.5rem;
      font-weight:
        bold;
      color: #343a40;
    }

    .navbar {
      background-color: #343a40;
      padding: 20px 0;
    }

    .container {
      margin-top: 50px;
    }

    h1,
    h2 {
      text-align: center;
      margin-bottom: 30px;
      color: #343a40;
    }

    .card {
      border: none;
      box-shadow:
        0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
      background-color:
        #343a40;
      color: #fff;
      font-weight: bold;
    }

    .card-body {
      padding: 0;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    th,
    td {
      text-align: center;
    }

    .table thead th {
      vertical-align: middle;
      background-color: #343a40;
      color: #fff;
      font-weight: bold;
    }

    .table tbody tr:nth-of-type(odd) {
      background-color: #f8f9fa;
    }

    .table tbody tr:hover {
      background-color: #e9ecef;
    }
  </style>
</head>

<body>
  <!-- Full-width header -->
  <header>
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
      <div class='container-fluid'>
        <a class='navbar-brand' href='/'>GYM Management System - Dashboard</a>
        <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav ml-auto'>
            <li class='nav-item'>
              <a class='nav-link' href='/signin'>Sign In</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href='/signup'>Sign Up</a>
            </li>
            <!-- Add more navigation links as needed -->
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main content -->
  <div class='container'>
    <div class='row'>
      <!-- Member Management Section -->
      <div class='col'>
        <div class='card'>
          <div class='card-header'>Member Management</div>
          <!-- Member list table will be dynamically populated here -->
          <div class='card-body'>
            <table class='table table-striped' id='memberTable'>
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Membership Start Date</th>
                  <th>Membership End Date</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each members}}
                <tr>
                  <td>{{@index}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.address}}</td>
                   <td>{{this.formatted_start_date}}</td>
                    <td>{{this.formatted_end_date}}</td>
                  <td>
                    <button class='btn btn-sm btn-primary'>Edit</button>
                    <button class='btn btn-sm btn-danger'>Delete</button>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          <div class='card-footer text-muted'>
            <button class='btn btn-primary' data-toggle='modal' data-target='#addMemberModal'>Add New Member</button>

          </div>
        </div>
      </div>
    </div>
  </div>
  {{> memberform}}

  <!-- Membership Plans Section -->
  <div class='container'>
    <div class='row'>
      <div class='col'>
        <div class='card'>
          <div class='card-header'>Membership Plans</div>
          <div class='card-body'>
            {{#each membershipPlans}}
            <div class='card'>
              <div class='card-body'>
                <h5 class='card-title'>{{this.name}}</h5>
                <p class='card-text'>Price: ${{this.price}}</p>
                <a href='#' class='btn btn-primary'>Subscribe</a>
              </div>
            </div>
            {{/each}}
          </div>
          <div class='card-footer text-muted'>
            <button class='btn btn-primary' data-toggle='modal' data-target='#addMemberModal'>Add New Plan
              Plans</button>

          </div>

          <div class='card-footer text-muted'>
            <button class='btn btn-link'>View All Membership Plans</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- {{> planform}} --}}

  <!-- Bootstrap JS -->
  <script src='https://code.jquery.com/jquery-3.5.1.slim.min.js'></script>
  <script src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js'></script>
  <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js'></script>
 <script>
        // Function to format date as "ddd MMM DD YYYY"
        function formatDate(date) {
            var options = { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' };
            return new Date(date).toLocaleDateString('en-US', options);
        }
    </script>
</body>

</html>