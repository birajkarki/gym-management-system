    <style>
      /* Custom styles */
      body { font-family: Arial, sans-serif; margin: 0; padding: 0; background-color: #f8f9fa; }
      .hero-section { background-image: url('https://source.unsplash.com/featured/?gym'); /* Image from Unsplash */ background-size: cover; color: #fff; padding: 100px 20px; text-align: center; }
      .hero-section h1 { font-size: 3rem; margin-bottom: 20px; text-transform: uppercase; }
      .hero-section p { font-size: 1.5rem; margin-bottom: 40px; }
      .cta-button { background-color: #dc3545; border-color: #dc3545; color: #fff; padding: 15px 30px; font-size: 1.2rem; text-transform: uppercase; border-radius: 5px; transition: background-color 0.3s ease-in-out; text-decoration: none; /* Remove underline */ display: inline-block; /* Make it inline-block for padding */ }
      .cta-button:hover { background-color: #c82333; }
      .about-section { background-color: #fff; padding: 100px 20px; text-align: center; }
      .about-section h2 { font-size: 2.5rem; margin-bottom: 30px; color: #343a40; }
      .about-section p { font-size: 1.2rem; margin-bottom: 40px; color: #343a40; text-align: left; }
      .feature-section { background-color: #f8f9fa; padding: 100px 20px; text-align: center; }
      .feature-section h2 { font-size: 2.5rem; margin-bottom: 30px; color: #343a40; }
      .feature-section p { font-size: 1.2rem; margin-bottom: 40px; color: #343a40; text-align: left; }
      .feature-item { margin-bottom: 30px; }
      .feature-item h3 { font-size: 2rem; margin-bottom: 20px; color: #343a40; text-align: left; }
      .feature-item p { font-size: 1.2rem; color: #343a40; text-align: left; }
      .image-text-container { display: flex; flex-direction: row; justify-content: space-between; align-items: center; }
      .image-text-container .text { flex: 1; padding-right: 20px; }
      .image-text-container img { flex: 1; max-width: 100%; height: auto; /* Maintain aspect ratio */ max-height: 300px; /* Set maximum height */ }
      .contact-section { background-color: #dc3545; padding: 100px 20px; text-align: center; }
      .contact-section h2 { font-size: 2.5rem; margin-bottom: 30px; color: #fff; }
      .contact-section p { font-size: 1.2rem; margin-bottom: 40px; color: #fff; }
      /* Responsive styles */
      @media (max-width: 768px) {
        .hero-section { padding: 80px 20px; }
        .hero-section h1 { font-size: 2.5rem; }
        .hero-section p { font-size: 1.2rem; }
        .about-section { padding: 80px 20px; }
        .about-section h2 { font-size: 2rem; }
        .about-section p { font-size: 1rem; }
        .feature-section { padding: 80px 20px; }
        .feature-section h2 { font-size: 2rem; }
        .feature-section p { font-size: 1rem; }
        .contact-section { padding: 80px 20px; }
        .contact-section h2 { font-size: 2rem; }
        .contact-section p { font-size: 1rem; }
        .image-text-container { flex-direction: column; align-items: center; }
        .image-text-container img { max-width: 100%; max-height: 200px; /* Reduced height for smaller screens */ margin-top: 20px; }
        .image-text-container .text { padding: 0; text-align: center; }
      }
    </style>
  </head>
